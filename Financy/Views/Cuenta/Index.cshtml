@model IEnumerable<Financy.Data.Cuenta>

@{
    ViewBag.Title = "Cuentas";
}

<h2>Cuentas</h2>

<p>
    @Html.ActionLink("Agregue una Cuenta", "Create")
</p>
<table>
    <tr>
        <th>
            Cuenta
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Cuenta_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Cuenta_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Cuenta_Id })
        </td>
    </tr>
}

</table>

