<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="robots" content="noindex,nofollow" />
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application.</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
        
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.js")" type="text/javascript"></script>
        <script src="~/Scripts/Highcharts-2.2.1/js/highcharts.src.js"></script>
        <script src="~/Scripts/EditorHookup.js"></script>
        <script type="text/javascript">

            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-36012876-1']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

        </script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Financy", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Tour", "Index", "Cuenta")</li>
                            <li>@Html.ActionLink("Agregar Transacción", "Create", "Transacciones")</li>
                            <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-right">
                    <p>
                        @Html.ActionLink("Cuentas", "Index", "Cuenta") -
                        @Html.ActionLink("Ingresos", "Index", "Entrada") -
                        @Html.ActionLink("Presupuesto", "Index", "Presupuesto") - 
                        @Html.ActionLink("Transacciones", "Index", "Transacciones") - 
                        @Html.ActionLink("Proyección", "Index", "Proyeccion")
                    </p>
                </div>
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Powered by CyC </p>
                </div>
            </div>
        </footer>

    </body>
</html>
